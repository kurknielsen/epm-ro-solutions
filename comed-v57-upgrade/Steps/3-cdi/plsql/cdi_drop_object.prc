CREATE OR REPLACE PROCEDURE CDI_DROP_OBJECT(p_OBJECT_NAME IN VARCHAR2, p_OBJECT_TYPE IN VARCHAR2) AS
v_COUNT PLS_INTEGER;
BEGIN
   --
   SELECT COUNT(*) INTO v_COUNT
   FROM USER_OBJECTS
   WHERE OBJECT_NAME = p_OBJECT_NAME
      AND OBJECT_TYPE = p_OBJECT_TYPE;
   IF v_COUNT <> 0 THEN
      EXECUTE IMMEDIATE 'DROP ' || p_OBJECT_TYPE || ' ' || p_OBJECT_NAME || CASE p_OBJECT_TYPE WHEN 'TABLE' THEN ' CASCADE CONSTRAINTS' WHEN 'TYPE' THEN ' FORCE' ELSE '' END;
   END IF;
END CDI_DROP_OBJECT;
/
