CREATE OR REPLACE FUNCTION CDI_TO_HTML_FONT_COLOR(p_VALUE IN VARCHAR2, p_COLOR IN VARCHAR2 DEFAULT 'black', p_BOLD IN PLS_INTEGER DEFAULT 0) RETURN VARCHAR2 AS
BEGIN
   RETURN '<html><font color="'|| LOWER(p_COLOR) || '" ' || CASE WHEN p_BOLD = 1 THEN '<b>' ELSE '' END || p_VALUE || CASE WHEN p_BOLD = 1 THEN '</b>' ELSE '' END || '</font></html>';
END CDI_TO_HTML_FONT_COLOR;
