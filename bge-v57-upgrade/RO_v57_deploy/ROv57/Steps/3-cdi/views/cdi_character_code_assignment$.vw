CREATE OR REPLACE VIEW CDI_CHARACTER_CODE_ASSIGNMENT$ AS
WITH CHR_SET AS (SELECT CHR(64+ROWNUM) "LETTER" FROM DUAL CONNECT BY ROWNUM <= 26)
SELECT CHARACTER_CODE, LEAD(CHARACTER_CODE) OVER (ORDER BY CHARACTER_CODE) "NEXT_CHARACTER_CODE"
FROM (SELECT A.LETTER || B.LETTER "CHARACTER_CODE" FROM CHR_SET A CROSS JOIN CHR_SET B /*WHERE A.LETTER <> B.LETTER*/);
